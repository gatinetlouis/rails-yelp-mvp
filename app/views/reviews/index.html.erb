
<div class="container">

<h1 class= mb-3>Reviews for <%= @restaurant.name %></h1>
<%= link_to 'Back to the restaurant information',restaurant_path(@restaurant), class:'btn btn-primary ml-1'  %>

  <div class="row">
    <% @reviews.each do |review| %>
    <div class="card text-white bg-dark m-3 col-4">
      <div class="card-header">Rate : <%= review.rating %></div>
      <div class="card-body">
        <h5 class="card-title">Comment</h5>
        <p class="card-text"><%= review.content %></p>
        <p class="card-text">Given by <%= review.name %> the <%= review.created_at.strftime("%F") %></p>
        <p class="card-text"> More details </p>
      </div>
    </div>
    <% end %>
  </div>
</div>

